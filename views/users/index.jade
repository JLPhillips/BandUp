extends ../template/layout
include ../mixins/form-helper

block content
  .row
  .row  
    .small-12.columns
      h1 Sign Up for Band Up
  .row
    .small-12.columns
      form(action='/login' method='post')#loginForm
        .row
          .small-12.columns
            label(for='email') Email:
            input(type='text',name='email')
        .row
          .small-12.columns
            label(for='password') Password:
            input(type='password',name='password')
  .row
    if user 
      button(value='Logout #{user.name}').logout.button.radius.alert= "Logout " + user.name

    else
      button#login.button.radius.sucess Log In
