extends ../template/layout

block content
  .row
    .small-12.columns
      #lyrics
        .lyric
          table
            thead
              tr
                th Title
                th Author
                th Date
                th Tags
            tbody
              tr
                td= lyric.title
                td= lyric.author
                td= lyric.date
                td= lyric.tags
          .content
            img(src=lyric.image)
            p.content= lyric.content